            <script>
                const steps = document.querySelectorAll('.step');
                const prevBtn = document.querySelector('.prev-btn');
                const nextBtn = document.querySelector('.next-btn');
                const submitBtn = document.querySelector('.btn-submit');

                let currentStep = 0;

                function showStep(stepIndex) {
                    steps.forEach((step, index) => {
                        step.style.display = index === stepIndex ? 'block' : 'none';
                    });
                }

                function isStepValid() {
                    const currentStepInputs = steps[currentStep].querySelectorAll('input[required], select[required]');
                    for (const input of currentStepInputs) {
                        if (!input.value.trim()) {
                            return false;
                        }
                    }
                    return true;
                }

                function goToNextStep() {
                    if (currentStep < steps.length - 1) {
                        if (isStepValid()) {
                            currentStep++;
                            showStep(currentStep);
                            togglePreviousButton();
                            toggleSubmitButton();
                        } else {
                            alert('Please fill out all required fields before proceeding.');
                        }
                    }
                }

                function goToPrevStep() {
                    if (currentStep > 0) {
                        currentStep--;
                        showStep(currentStep);
                        togglePreviousButton();
                        toggleSubmitButton();
                    }
                }

                function togglePreviousButton() {
                    prevBtn.style.display = currentStep === 0 ? 'none' : 'block';
                }

                function toggleSubmitButton() {
                    nextBtn.style.display = currentStep === steps.length - 1 ? 'none' : 'block';
                    submitBtn.style.display = currentStep === steps.length - 1 ? 'block' : 'none';
                }

                nextBtn.addEventListener('click', goToNextStep);
                prevBtn.addEventListener('click', goToPrevStep);

                document.getElementById('notify-form').addEventListener('submit', (event) => {
                    event.preventDefault();

                    if (currentStep === steps.length - 1 && isStepValid()) {
                        alert('Form submitted successfully!');
                        // Perform your form submission logic here (e.g., AJAX request)
                    } else {
                        alert('Please complete all steps before submitting the form.');
                    }
                });

                // Show the first step initially and hide the "Previous" button
                showStep(currentStep);
                togglePreviousButton();
                toggleSubmitButton();

            </script>


            <script>
                const inputCountry = document.getElementById('input_country');
                const arrivalSection = document.getElementById('arrival-section');
                const inputNationality = document.querySelector('[name="input_nationality"]');
                const inputArrivalFlightNumber = document.querySelector('[name="input_arrival_flight_number"]');
                const inputDepartureFlightNumber = document.querySelector('[name="input_departure_flight_number"]');

                // Function to handle the country selection
                function handleCountrySelection() {
                    if (inputCountry.value === 'The Bahamas') {
                        arrivalSection.style.display = 'none';
                        inputNationality.value = 'Bahamian';
                        inputArrivalFlightNumber.value = 'LOCAL RESIDENT';
                        inputDepartureFlightNumber.value = 'LOCAL RESIDENT';
                        // Remove the 'required' attribute from the hidden inputs
                        inputArrivalFlightNumber.removeAttribute('required');
                        inputDepartureFlightNumber.removeAttribute('required');
                    } else {
                        arrivalSection.style.display = 'block';
                        inputNationality.value = ''; // Reset the value to allow user input
                        inputArrivalFlightNumber.value = ''; // Reset the value to allow user input
                        inputDepartureFlightNumber.value = ''; // Reset the value to allow user input
                        // Add the 'required' attribute back to the inputs
                        inputArrivalFlightNumber.setAttribute('required', 'required');
                        inputDepartureFlightNumber.setAttribute('required', 'required');
                    }
                }

                // Add an event listener to the inputCountry element
                inputCountry.addEventListener('change', handleCountrySelection);

                // Call the function initially to handle the initial state
                handleCountrySelection();
            </script>




            <script>
                // Function to fetch assignments and populate the select box
                function populateFormFields() {
                    $.ajax({
                        url: 'api/fetch_data/get_form_data.php',
                        type: 'GET',
                        dataType: 'json',
                        success: function (response) {
                            // Populating the assignments
                            var assignmentSelectBox = $('select[name="input_job_title"]');
                            var assignmentOptions = '';

                            response.assignments.forEach(function (assignment) {
                                assignmentOptions += '<option value="' + assignment + '">' + assignment + '</option>';
                            });

                            assignmentSelectBox.html(assignmentOptions);

                            // Populating the arrival airlines and departing airlines
                            var arrivalAirlineSelectBox = $('select[name="input_arrival_airline"]');
                            var departingAirlineSelectBox = $('select[name="input_departure_airline"]');
                            var arrivalAirlineOptions = '';
                            var departingAirlineOptions = '';

                            response.arrivalAirline.forEach(function (arrivalAirline) {
                                arrivalAirlineOptions += '<option value="' + arrivalAirline + '">' + arrivalAirline + '</option>';
                                departingAirlineOptions += '<option value="' + arrivalAirline + '">' + arrivalAirline + '</option>';
                            });

                            arrivalAirlineSelectBox.html(arrivalAirlineOptions);
                            departingAirlineSelectBox.html(departingAirlineOptions);

                            // Populating the Hotel
                            var hotelSelectBox = $('select[name="input_hotel"]');
                            var hotelOptions = '';

                            response.hotelNames.forEach(function (hotelNames) {
                                hotelOptions += '<option value="' + hotelNames + '">' + hotelNames + '</option>';
                            });

                            hotelSelectBox.html(hotelOptions);

                        },
                        error: function () {
                            alert('Error occurred while fetching data. Please try again later.');
                        }
                    });
                }

                // Call the function to populate the form fields when the window has finished loading
                $(document).ready(function () {
                    populateFormFields();
                });
            </script>

            <script>
