                        // Form is not fully filled, show an alert or handle the error accordingly
                        alert('Please complete all steps before submitting the form.');
                    }
                });

                // Show the first step initially and hide the "Previous" button
                showStep(currentStep);
                togglePreviousButton();
                toggleSubmitButton(); // Call to hide the "Submit" button initially
            </script>

